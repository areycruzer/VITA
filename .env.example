# ============================================================================
# VITA Protocol Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================================================

# ============================================================================
# BLOCKCHAIN / WALLET
# ============================================================================

# Private key for deploying contracts (without 0x prefix)
# ⚠️  NEVER share or commit this key!
MANTLE_PRIVATE_KEY=your_private_key_here

# ============================================================================
# CHAINLINK FUNCTIONS
# ============================================================================

# Chainlink Functions subscription ID (created at functions.chain.link)
CHAINLINK_FUNCTIONS_ID=0

# Chainlink DON ID for Mantle (check docs.chain.link for latest)
CHAINLINK_DON_ID=fun-mantle-testnet-1

# ============================================================================
# API KEYS FOR PRODUCTIVITY VERIFICATION
# ============================================================================

# GitHub Personal Access Token (for API rate limits)
# Create at: https://github.com/settings/tokens
GITHUB_API_TOKEN=

# Upwork API credentials (if available)
UPWORK_API_KEY=
UPWORK_API_SECRET=

# ============================================================================
# CONTRACT VERIFICATION
# ============================================================================

# Mantlescan API key for contract verification
# Get from: https://mantlescan.xyz/myapikey
MANTLESCAN_API_KEY=

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Enable gas reporting in tests
REPORT_GAS=false

# CoinMarketCap API key for gas cost estimation in USD
COINMARKETCAP_API_KEY=

# ============================================================================
# FRONTEND (Next.js)
# ============================================================================

# Public RPC URL (safe to expose)
NEXT_PUBLIC_MANTLE_RPC=https://rpc.testnet.mantle.xyz

# Chain ID
NEXT_PUBLIC_CHAIN_ID=5001

# WalletConnect Project ID
# Get from: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=
